{
  "root": true,
  "ignorePatterns": ["dist", "node_modules", "assets.js"],
  "rules": {
    "no-var": 1,
    "no-unused-vars": 1,
    "camelcase": 1,
    "arrow-body-style": 1,
    "semi": [2, "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 4]
  },
  "env": {
    "commonjs": true,
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "config/webpack.common.js"
      }
    }
  }
}
